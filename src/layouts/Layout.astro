---
interface Props {
    title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>{title}</title>
        <link rel="preconnect" href="https://fonts.bunny.net" />
        <link href="https://fonts.bunny.net/css?family=noto-sans:400,700" rel="stylesheet" />
    </head>
    <body class="bg-stone-100 font-sans text-stone-950">
        <nav
            class="xs:text-lg mb-8 bg-stone-950 py-4 text-sm text-stone-100 text-white md:text-xl lg:text-2xl"
        >
            <div class="container mx-auto px-4">
                <ul class="flex">
                    <li><a href="/" class="hover:underline">O glyphs</a></li>
                </ul>
            </div>
        </nav>
        <div class="container mx-auto mb-8 px-4">
            <div class="prose prose-lg prose-stone md:prose-xl lg:prose-2xl">
                <header>
                    <h1 style="margin-left: -2px;">{title}</h1>
                </header>
                <main>
                    <slot />
                </main>
            </div>
        </div>
    </body>
</html>
